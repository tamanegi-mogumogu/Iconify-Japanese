<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <com.drdisagree.iconify.ui.widgets.TitleWidget
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:iconSpaceReserved="true"
        app:titleText="@string/settings_section_title_about" />

    <com.drdisagree.iconify.ui.widgets.MenuWidget
        android:id="@+id/github_repository"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_github"
        app:summaryText="@string/settings_github_repository_desc"
        app:titleText="@string/settings_github_repository_title" />

    <com.drdisagree.iconify.ui.widgets.MenuWidget
        android:id="@+id/telegram_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_telegram"
        app:summaryText="@string/settings_telegram_group_desc"
        app:titleText="@string/settings_telegram_group_title" />

    <com.drdisagree.iconify.ui.widgets.MenuWidget
        android:id="@+id/credits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_credits"
        app:summaryText="@string/settings_credits_desc"
        app:titleText="@string/settings_credits_title" />

</LinearLayout>
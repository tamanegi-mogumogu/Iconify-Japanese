<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.drdisagree.iconify.ui.widgets.TitleWidget
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:iconSpaceReserved="true"
        app:titleText="@string/settings_section_title_xposed" />

    <com.drdisagree.iconify.ui.widgets.SwitchWidget
        android:id="@+id/hide_warn_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_xposed_warn"
        app:isChecked="true"
        app:summaryText="@string/settings_show_warning_desc"
        app:titleText="@string/settings_show_warning_title" />

    <com.drdisagree.iconify.ui.widgets.RadioDialogWidget
        android:id="@+id/mod_applying_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:entries="@array/xposed_mod_apply_method"
        app:icon="@drawable/ic_xposed_restart_systemui"
        app:showSelectedPrefix="false"
        app:titleText="@string/settings_restart_systemui_behavior" />

</LinearLayout>
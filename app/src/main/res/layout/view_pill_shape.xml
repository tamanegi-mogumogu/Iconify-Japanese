<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pill_shape_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.drdisagree.iconify.ui.widgets.TitleWidget
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="@string/section_title_pill_appearance" />

    <com.drdisagree.iconify.ui.widgets.SliderWidget
        android:id="@+id/pill_width"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:sliderStepSize="1"
        app:sliderValue="108"
        app:sliderValueFrom="40"
        app:sliderValueTo="300"
        app:titleText="@string/pill_width_title"
        app:valueFormat="dp" />

    <com.drdisagree.iconify.ui.widgets.SliderWidget
        android:id="@+id/pill_thickness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:sliderStepSize="1"
        app:sliderValue="2"
        app:sliderValueFrom="0"
        app:sliderValueTo="12"
        app:titleText="@string/pill_thickness_title"
        app:valueFormat="dp" />

    <com.drdisagree.iconify.ui.widgets.SliderWidget
        android:id="@+id/pill_bottom_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:sliderStepSize="1"
        app:sliderValue="8"
        app:sliderValueFrom="2"
        app:sliderValueTo="14"
        app:titleText="@string/pill_bottom_space_title"
        app:valueFormat="dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@drawable/item_background_material"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/container_paddingSide"
        android:paddingVertical="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/pill_shape_apply"
            style="@style/Widget.MaterialButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_apply" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/pill_shape_reset"
            style="@style/Widget.MaterialButton.Red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/btn_reset"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>